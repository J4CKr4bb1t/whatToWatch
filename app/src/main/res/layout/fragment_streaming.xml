<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3F2CB"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".StreamingFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dela_gothic_one"
        android:text="Where to Watch"
        android:textAlignment="center"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/streamingRecycle"
        android:layout_width="200dp"
        android:layout_height="440dp" />


    <Button
        android:id="@+id/returnToSearchFromStreaming"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/dela_gothic_one"
        android:text="return to search" />

</LinearLayout>